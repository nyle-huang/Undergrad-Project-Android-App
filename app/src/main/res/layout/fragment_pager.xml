<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--底部导航栏-->
        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >
        </android.support.v4.view.ViewPager>

        <View
            android:layout_height="0.5dp"
            android:layout_width="match_parent"
            android:background="#CCCCCC"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="#00000000"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/llFeeds"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="0dp"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/ivFeeds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:padding="14dp"
                    android:src="@drawable/ic_tab_feeds" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llChats"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="0dp"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/ivChats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:background="#00000000"
                    android:src="@drawable/ic_tab_chats" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llContacts"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="0dp"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/ivContacts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="#00000000"
                    android:src="@drawable/ic_tab_contacts" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llMe"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="0dp"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/ivMe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:background="#00000000"
                    android:src="@drawable/ic_tab_me" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>