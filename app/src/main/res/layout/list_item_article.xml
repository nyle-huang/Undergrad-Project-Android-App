<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/list_item_article_cover_image_view"
        android:layout_width="135dp"
        android:layout_height="90dp"
        android:layout_margin="5dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_loading_image"/>

    <TextView
        android:id="@+id/list_item_article_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/list_item_article_cover_image_view"
        android:maxLines="3"
        android:ellipsize="end"
        android:textStyle="bold"
        android:textSize="16dp"
        tools:text="Article Title"/>

    <TextView
        android:id="@+id/list_item_article_author_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/list_item_article_title_text_view"
        android:layout_alignParentLeft="true"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="14dp"
        tools:text="Article Author"/>

    <View
        android:id="@+id/list_item_article_divider"
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:layout_below="@+id/list_item_article_cover_image_view"
        android:background="#cccccc"/>

</RelativeLayout>